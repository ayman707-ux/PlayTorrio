{
  "name": "playtorrio",
  "version": "1.5.9",
  "description": "Ayman's PlayTorrio an all in one media center",
  "author": {
    "name": "ayman",
    "email": "aymanisthedude1@gmail.com"
  },
  "type": "module",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "serve": "node server.mjs",
    "build": "electron-builder"
  },
  "dependencies": {
    "axios": "^1.7.4",
    "castv2-client": "^1.2.0",
    "cheerio": "^1.0.0",
    "cors": "^2.8.5",
    "discord-rpc": "^4.0.1",
    "electron-updater": "^6.6.2",
    "epubjs": "^0.3.93",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "ffmpeg-static": "^5.2.0",
    "got": "^14.4.7",
    "jszip": "^3.10.1",
    "koffi": "^2.14.1",
    "mdns-js": "^1.0.3",
    "mime-types": "^2.1.35",
    "multer": "^2.0.1",
    "node-fetch": "^3.3.2",
    "parse-torrent": "^9.0.3",
    "webtorrent": "^2.6.8",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "electron": "^38.2.2",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.ayman.PlayTorrio",
    "productName": "PlayTorrio",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "publish": [
      {
        "provider": "github",
        "owner": "ayman707-ux",
        "repo": "PlayTorrio"
      }
    ],
    "files": [
      "main.js",
      "preload.js",
      "server.mjs",
      "api.cjs",
      "chromecast.mjs",
      "jackett_api_key.json",
      "public/**/*",
      "node_modules/**/*",
      "mpv/**",
      "VLC/**"
    ],
    "asarUnpack": [
      "mpv/**",
      "VLC/**",
      "node_modules/ffmpeg-static/**"
    ],
    "extraResources": [
      {
        "from": "mpv",
        "to": "mpv"
      },
      {
        "from": "VLC",
        "to": "VLC"
      }
    ],
    "win": {
      "icon": "build/icon.ico",
      "artifactName": "PlayTorrio.installer.${ext}",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PlayTorrio",
      "runAfterFinish": true
    },
    "mac": {
      "icon": "icon.icns"
    },
    "linux": {
      "icon": "icon.png"
    }
  }
}
