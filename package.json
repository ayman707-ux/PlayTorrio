{
  "name": "playtorrio",
  "version": "1.2.6",
  "description": "A sophisticated application designed to seamlessly interface with Jackett for fetching torrents and provide high-performance streaming directly through an integrated API.",
  "author": {
    "name": "ayman",
    "email": "aymanisthedude1@gmail.com"
  },
  "type": "module",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "serve": "node server.mjs",
    "prebuild": "node -e \"const cp=require('child_process');const npm=process.platform==='win32'?'npm.cmd':'npm';cp.spawnSync(npm,['install','--production'],{stdio:'inherit',cwd:'./Torrentless'});cp.spawnSync(npm,['install','--production'],{stdio:'inherit',cwd:'./111477'});cp.spawnSync(npm,['install','--production'],{stdio:'inherit',cwd:'./books'});cp.spawnSync(npm,['install','--production'],{stdio:'inherit',cwd:'./RandomBook'});cp.spawnSync(npm,['install','--production'],{stdio:'inherit',cwd:'./anime'});cp.spawnSync(npm,['install','--production'],{stdio:'inherit',cwd:'./Torrentio'});\"",
    "build": "electron-builder"
  },
  "dependencies": {
    "axios": "^1.7.4",
    "cheerio": "^1.0.0",
    "cors": "^2.8.5",
    "electron-updater": "^6.6.2",
    "epubjs": "^0.3.93",
    "express": "^4.21.2",
    "ffmpeg-static": "^5.2.0",
    "got": "^14.4.7",
    "jszip": "^3.10.1",
    "mime-types": "^2.1.35",
    "multer": "^2.0.1",
    "node-fetch": "^3.3.2",
    "parse-torrent": "^9.0.3",
    "webtorrent": "^2.6.8",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "electron": "^38.2.2",
    "electron-builder": "^24.13.3"
  },
  "optionalDependencies": {
    "wcjs-prebuilt": "^3.0.0",
    "wcjs-renderer": "^1.0.2"
  },
  "build": {
    "appId": "com.ayman.PlayTorrio",
    "productName": "PlayTorrio",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "publish": [
      {
        "provider": "github",
        "owner": "ayman707-ux",
        "repo": "PlayTorrio"
      }
    ],
    "files": [
      "main.js",
      "preload.js",
      "server.mjs",
      "jackett_api_key.json",
      "public/**/*",
      "node_modules/**/*",
      "mpv/**",
      "Torrentless/**/*",
      "111477/**/*",
      "books/**/*",
      "RandomBook/**/*",
      "anime/**/*",
      "Torrentio/**/*"
    ],
    "asarUnpack": [
      "mpv/**",
      "Torrentless/**",
      "111477/**",
      "books/**",
      "RandomBook/**",
      "anime/**",
      "Torrentio/**"
    ],
    "extraResources": [
      {
        "from": "mpv",
        "to": "mpv"
      },
      {
        "from": "Torrentless",
        "to": "Torrentless"
      },
      {
        "from": "111477",
        "to": "111477"
      },
      {
        "from": "books",
        "to": "books"
      },
      {
        "from": "RandomBook",
        "to": "RandomBook"
      },
      {
        "from": "anime",
        "to": "anime"
      },
      {
        "from": "Torrentio",
        "to": "Torrentio"
      }
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PlayTorrio",
      "runAfterFinish": true
    },
    "mac": {
      "icon": "icon.icns"
    },
    "linux": {
      "icon": "icon.png"
    }
  }
}
